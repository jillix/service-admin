{
  "client": {
    "load": [
      "public_router",
      "common_router",
      "ruut_not_found",
      "nav_main_public_layout",
      "footer_layout"
    ],
    "config": {
      "templates": {
        "layout": {
          "to": "body",
          "html": "/root/public/layout_public.html",
          "render": true
        }
      },
      "defaultTemplate": "layout",
      "states": {
          "showLoader": [{
              "sel": ".page-loader",
              "rm": ["hide"]
          }],
          "hideLoader": [{
              "sel": ".page-loader",
              "add": ["hide"]
          }],
          "showContainer": [{
              "sel": "._container",
              "rm": ["hide"]
          }],
          "hideContainer": [{
              "sel": "._container",
              "add": ["hide"]
          }],
          "displayLoader": [{
              "states": [
                  "showLoader",
                  "hideContainer"
              ]
          }],
          "displayContainer": [{
              "states": [
                  "showContainer",
                  "hideLoader"
              ]
          }]
      }
    },
    "markup": [
      "/root/public/layout_public.html"
    ],
    "styles": [
      "/css/octicons/octicons.css",
      "/css/flexboxgrid.css",
      "/css/style.css",
      "/css/public.css"
    ]
  },
  "roles": {
    "*": true
  },
  "module": "view",
  "name": "public_layout"
}
