{
  "client": {
    "config": {
      "title": "Sign in",
      "templates": {
        "layout": {
          "to": "._container",
          "html": "/login/signin.html"
        }
      },
      "states": {
        "login_start": [
          {
            "sel": ".splash",
            "rm": [
              "hide"
            ]
          },
          {
            "sel": ".login",
            "add": [
              "hide"
            ]
          },
          {
            "sel": ".error",
            "add": [
              "hide"
            ]
          }
        ],
        "login_error": [
          {
            "sel": ".splash",
            "add": [
              "hide"
            ]
          },
          {
            "sel": ".login",
            "rm": [
              "hide"
            ]
          },
          {
            "sel": ".error",
            "rm": [
              "hide"
            ]
          }
        ]
      },
      "defaultTemplate": "layout",
      "domEvents": [
        {
          "on": "click",
          "selector": ".btn-login",
          "flow": "loginBtnClick"
        }
      ]
    },
    "flow": [
        [
            "loginBtnClick",
            [":state", "login_start"],
            [
              ":ALTR",
              {
                "set": {
                  "email": "$.input-login-email:value",
                  "pass": "$.input-login-password:value"
                }
              }
            ],
            [">login/flow", "loginUser"]
        ],
        [
            "renderedDOM",
            [":public_layout/state", "displayContainer"]
        ]
    ],
    "markup": [
      "/login/signin.html"
    ]
  },
  "roles": {
    "*": true
  },
  "module": "view",
  "name": "signin_layout"
}
