{
  "client": {
    "config": {
      "title": "User settings",
      "templates": {
        "layout": {
          "to": "._container",
          "html": "/user/user_password.html"
        }
      },
      "defaultTemplate": "layout",
      "states": {
        "showPassConfirm": [
          {
            "sel": ".pass-change-confirm",
            "rm": [
              "hide"
            ]
          }
        ],
        "hidePassConfirm": [
          {
            "sel": ".pass-change-confirm",
            "add": [
              "hide"
            ]
          }
        ]
      },
      "domEvents": [
        {
          "on": "click",
          "element": "btn-changePass",
          "flow": "showPassConfirm"
        },
        {
          "on": "click",
          "element": "closeAChangePass",
          "flow": "hidePassConfirm"
        }
      ]
    },
    "markup": [
      "/user/user_password.html"
    ],
    "flow": [
      [
        "renderedDOM",
        [
          ":ALTR",
          {
            "data": {
              "clear": false
            }
          }
        ],
        "nav_user_settings_layout/render"
      ],
      [
        "renderedDOM",
        [":private_layout/state", "showFooter"],
        [":private_layout/state", "displayContainer"]
      ],
      [
        "showPassConfirm",
        [":user_password_layout/state", "showPassConfirm"]
      ],
      [
        "hidePassConfirm",
        [":user_password_layout/state", "hidePassConfirm"]
      ]
    ]
  },
  "roles": {
    "*": true
  },
  "module": "view",
  "name": "user_password_layout"
}
