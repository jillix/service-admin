{
  "client": {
    "config": {
      "title": "Reset password",
      "templates": {
        "layout": {
          "to": "._container",
          "html": "/login/reset_password.html"
        }
      },
      "defaultTemplate": "layout",
      "states": {
        "start": [
          {
            "element": "resetPasswordBox",
            "add": [
              "hide"
            ]
          }
        ],
        "successfull": [
          {
            "element": "confimBox",
            "rm": [
              "hide"
            ]
          }
        ],
        "error": [
          {
            "sel": "confimBox",
            "rm": [
              "hide"
            ]
          }
        ]
      },
      "domEvents": [
        {
          "on": "click",
          "element": "btnResetPass",
          "flow": "resetPassBtn"
        }
      ]
    },
    "flow": [
      [
        "resetPassBtn",
        ["state", "start"],
        [
          ":ALTR",
          {
            "set": {
              "email": "$#resetPasswordEmail:value"
            }
          }
        ],
        [">login/flow", "resetPassword"]
      ]
    ],
    "markup": [
      "/login/reset_password.html"
    ]
  },
  "roles": {
    "*": true
  },
  "module": "view",
  "name": "reset_password_layout"
}